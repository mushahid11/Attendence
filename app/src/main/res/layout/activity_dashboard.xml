<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#42a5f5">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Attendance"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/white">

            </TextView>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <EditText
            app:backgroundTint="#42a5f5"
            android:editable="false"
            android:textColor="@color/black"
            android:id="@+id/profile"
            android:text="Haider Ali"
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </EditText>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="5dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="15dp"
                android:layout_width="110dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="110dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/img"
                        android:background="@drawable/atta"
                        android:layout_width="35dp"
                        android:layout_height="35dp">
                    </ImageView>
                    <TextView
                        android:padding="2dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:onClick="markAttendance"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/img"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark Attendance"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                   android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgg"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/attendenseh">

                    </ImageView>
                <TextView
                    android:layout_below="@+id/imgg"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="Attendance History" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginStart="55dp"
                android:id="@+id/et_fullNmae"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"/>



            <ImageView

                android:id="@+id/imageViewp"
                android:layout_below="@+id/et_fullNmae"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/full_name"
                android:backgroundTint="@color/black"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>

            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/ett_name"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/imageViewp"
                android:layout_marginStart="55dp"
                android:text="jcjbsdkbas" />

        </RelativeLayout>

        <EditText
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </EditText>
        <RelativeLayout
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginStart="55dp"
                android:id="@+id/et_fullNmaee"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"/>



            <ImageView
                android:id="@+id/imageViewe"
                android:layout_below="@+id/et_fullNmaee"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/email"
                android:backgroundTint="@color/black"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>

            <EditText
                android:id="@+id/ett_email"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:layout_marginTop="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:text="fhdfhsdhfsdh" />


        </RelativeLayout>

        <EditText
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </EditText>

        <RelativeLayout
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="13dp"
                android:layout_marginStart="55dp"
                android:id="@+id/et_fullNmaeee"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone-Number"/>



            <ImageView
                android:id="@+id/imageViewee"
                android:layout_below="@+id/et_fullNmaeee"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/phone"
                android:backgroundTint="@color/black"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>

            <EditText
                android:id="@+id/ett_contact"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:layout_marginTop="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:text="8475893745" />


        </RelativeLayout>
        <EditText
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </EditText>

<LinearLayout
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="30dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show"
        android:layout_width="120dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/update"
        android:text="Show Detail" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update"
        android:layout_width="120dp"
        android:layout_marginStart="25dp"
        android:onClick="update"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/update"
        android:text="Update Detail" />

</LinearLayout>


    </LinearLayout>
</LinearLayout>